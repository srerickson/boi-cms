
<%= render "search_form" %>


<div class="span-24">
  <div class="span-21 query_phrase" >
    <%=raw query_to_phrase(@query) %>
  </div>
  <div class="span-3 last">
    <a class="ui-state-default ui-button ui-widget ui-corner-all bird_button" style="float:right" href="<%= new_bird_path %>">
      <span class='ui-icon ui-icon-plus' style='float:left;margin-left:-15px;'></span> Create a Bird
    </a>
  </div>
</div>

<div id="search_results">
  <%= render :partial => "birds_list", :object => @birds %>
</div>

