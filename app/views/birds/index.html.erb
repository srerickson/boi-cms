

<a href="#" onclick='$("div.search").toggle();return false;'>Advanced Search/Filter Options</a>
<div class="span-24 append-bottom search" style="display:none">
  <%= render "search_form" %>
</div>


<div class="span-24 append-bottom">
  <%= link_to "Create A New Bird", new_bird_path %>
</div>

<div class="span-24 append-bottom">
  <div class="span-3 bird_column_header"><%= default_bird_field_names["name"][0] %></div>
  <div class="span-1 bird_column_header"><%= default_bird_field_names["url"][0] %></div>
  <div class="span-3 bird_column_header"><%= default_bird_field_names["genus_type_id"][0] %></div>
  <div class="span-3 bird_column_header"><%= default_bird_field_names["habitat_id"][0] %></div>
  <div class="span-3 bird_column_header"><%= default_bird_field_names["fse_name"][0] %></div>
  <div class="span-3 bird_column_header"><%= default_bird_field_names["fse_org_style_id"][0] %></div>
  <div class="span-3 bird_column_header"><%= default_bird_field_names["op_name"][0] %></div>
  <div class="span-3 bird_column_header last"><%= default_bird_field_names["op_org_style_id"][0] %></div>
</div>

<% unless @birds.empty? %>

  <% @birds.each_with_index do |bird, i| %>
    <div class="span-24 bird_field_row <%= i.odd? ? "even_row" : "odd_row" %>">

      <div class="span-3 bird_field_data"><%= link_to bird.name, bird_path(bird) %></div>
      <div class="span-1 bird_field_data"><%= (bird.url.nil? or bird.url == "") ? "." : link_to("link", bird.url) %></div>
      <div class="span-3 bird_field_data"><%= bird.genus_type.nil? ? "." : bird.genus_type.name %></div>
      <div class="span-3 bird_field_data"><%= bird.habitat.nil? ? "." : bird.habitat.name %></div>
      <div class="span-3 bird_field_data"><%= (bird.fse_name.nil? or bird.fse_name == "") ? "." : truncate(bird.fse_name) %></div>
      <div class="span-3 bird_field_data"><%= bird.fse_org_style.nil? ? "." : truncate(bird.fse_org_style.name)  %></div>
      <div class="span-3 bird_field_data"><%= (bird.op_name.nil? or bird.op_name == "") ? "." : truncate(bird.op_name) %></div>
      <div class="span-3 bird_field_data last"><%= bird.op_org_style.nil? ? "." : truncate(bird.op_org_style.name) %></div>

    </div>
  <% end %>

<% end %>
